{
  "dashboard": {
    "title": "Mi Gestor - MÃ©tricas CrÃ­ticas",
    "tags": ["mi-gestor", "monitoring", "api"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Estado del Servicio",
        "type": "stat",
        "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0},
        "targets": [{
          "expr": "up{job=\"scrap_migestor_metrics\"}",
          "legendFormat": "Estado"
        }],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "type": "value",
                "options": {
                  "1": {"text": "ðŸŸ¢ UP", "color": "green"},
                  "0": {"text": "ðŸ”´ DOWN", "color": "red"}
                }
              }
            ],
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "red", "value": 0.5}
              ]
            },
            "color": {"mode": "thresholds"},
            "decimals": 0
          }
        },
        "options": {
          "reduceOptions": {"values": false, "calcs": ["lastNotNull"], "fields": ""},
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value",
          "graphMode": "none",
          "justifyMode": "auto"
        }
      },
      {
        "id": 2,
        "title": "Tasa de Errores 5xx",
        "type": "gauge",
        "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0},
        "targets": [{
          "expr": "rate(migestor_http_request_duration_seconds_count{status_code=~\"5..\"}[5m]) / rate(migestor_http_request_duration_seconds_count[5m]) * 100",
          "legendFormat": "Errores 5xx"
        }],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 5},
                {"color": "red", "value": 10}
              ]
            },
            "color": {"mode": "thresholds"},
            "decimals": 1,
            "unit": "percent",
            "min": 0,
            "max": 100
          }
        },
        "options": {
          "reduceOptions": {"values": false, "calcs": ["lastNotNull"], "fields": ""},
          "orientation": "auto",
          "showThresholdLabels": false,
          "showThresholdMarkers": true
        }
      },
      {
        "id": 3,
        "title": "Requests por Segundo",
        "type": "timeseries",
        "gridPos": {"h": 6, "w": 12, "x": 12, "y": 0},
        "targets": [{
          "expr": "rate(migestor_http_request_duration_seconds_count[5m])",
          "legendFormat": "RPS"
        }],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "barAlignment": 0,
              "lineWidth": 1,
              "fillOpacity": 10,
              "gradientMode": "opacity",
              "spanNulls": false,
              "showPoints": "never",
              "pointSize": 5
            },
            "decimals": 2,
            "unit": "reqps"
          }
        },
        "options": {
          "legend": {"showLegend": true, "displayMode": "list", "placement": "bottom"},
          "tooltip": {"mode": "single", "sort": "none"}
        }
      },
      {
        "id": 4,
        "title": "Latencia P95 Global",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6},
        "targets": [{
          "expr": "histogram_quantile(0.95, rate(migestor_http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "P95"
        }],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 2,
              "fillOpacity": 0,
              "gradientMode": "none",
              "showPoints": "never"
            },
            "decimals": 3,
            "unit": "s"
          }
        }
      },
      {
        "id": 5,
        "title": "Latencia Promedio",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 6},
        "targets": [{
          "expr": "rate(migestor_http_request_duration_seconds_sum[5m]) / rate(migestor_http_request_duration_seconds_count[5m])",
          "legendFormat": "Promedio"
        }],
        "fieldConfig": {
          "defaults": {
            "thresholds": {
              "steps": [
                {"color": "green", "value": null},
                {"color": "yellow", "value": 1},
                {"color": "red", "value": 2}
              ]
            },
            "color": {"mode": "thresholds"},
            "decimals": 3,
            "unit": "s"
          }
        },
        "options": {
          "reduceOptions": {"values": false, "calcs": ["lastNotNull"], "fields": ""},
          "orientation": "auto",
          "textMode": "value_and_name",
          "colorMode": "value",
          "graphMode": "none"
        }
      },
      {
        "id": 6,
        "title": "Latencia P99 (Peores Casos)",
        "type": "timeseries",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 10},
        "targets": [{
          "expr": "histogram_quantile(0.99, rate(migestor_http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "P99"
        }],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "custom": {
              "drawStyle": "line",
              "lineInterpolation": "linear",
              "lineWidth": 1,
              "fillOpacity": 0
            },
            "decimals": 3,
            "unit": "s"
          }
        }
      }
    ],
    "time": {"from": "now-1h", "to": "now"},
    "timepicker": {},
    "templating": {"list": []},
    "refresh": "30s",
    "schemaVersion": 37,
    "version": 1,
    "uid": "mi-gestor-critico"
  }
}
