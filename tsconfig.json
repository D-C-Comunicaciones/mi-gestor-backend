{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "esModuleInterop": true,
    "paths": {
      "@infraestructure/*": ["src/infraestructure/*"],
      "@modules/*": ["src/modules/*"],
      "@common/*": ["src/common/*"],
      "@config/*": ["src/config/*"],
      "@auth/*": ["src/modules/auth/*"],
      "@collectors/*": ["src/modules/collectors/*"],
      "@customers/*": ["src/modules/customers/*"],
      "@permissions/*": ["src/modules/permissions/*"],
      "@roles/*": ["src/modules/roles/*"],
      "@users/*": ["src/modules/users/*"],
      "@types/*": ["src/types/*"],
      "@prisma/*": ["src/infraestructure/prisma/*"],
      "@redis/*": ["src/infraestructure/redis/*"],
      "templates/*": ["src/assets/reports/templates/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
